        <input type="text" name="numeroA" value="" placeholder="Ingrese un valor"/>
        <label>Ingrese un número:</label>
        <input type="text" name="numeroB" value="" placeholder="Ingrese un valor"/>
        <select name="operaciones">
            <option value="sumar">Suma</option>
            <option value="restar">Resta</option>
            <option value="multiplicar">Multiplicacion</option>
            <option value="dividir">Division</option>
